{% extends "layout.html.twig" %}

{% block title %}{{ book.title }}{% endblock %}

{% block content %}
<p>
    <h2>{{ book.title }}</h2>
    <ul>
        {% if book.author !=null %}
            <li>Auteur : {{ book.author.lastname }} {{ book.author.firstname }}</li>
        {% endif %}
        <li>ISBN : {{ book.isbn }}</li>
    </ul>
    
    <p>{{ book.summary }}</p>
</p>
{% endblock %}
